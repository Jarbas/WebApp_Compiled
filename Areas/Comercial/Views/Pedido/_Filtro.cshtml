@using Rafitec.Cloud.Portal.Web.HtmlHelpers
@using Rafitec.Cloud.Portal.Dominio.Entidades
@using Rafitec.Cloud.Utils.Enums
@model Rafitec.Cloud.Portal.Web.Areas.Comercial.Models.Filtro.FiltroPedido

<form action="/Comercial/Pedido/Index" method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <label>#id</label>
            @Html.TextBoxFor(model => Model.Codigo, new { @class = "form-control" })
        </div>
       <div class="form-group col-md-8">
            <label>Cliente</label>
            @Html.Raw(Html.EntidadeDropDownList<Entidade>(Model.idCliente, "idEntidade", "RazaoSocial", "idCliente", e=> (e.TipoEntidadeDb == "Cliente"), new { @class = "form-control" }))
        </div>

        <div class="form-group col-md-4">
            <label>Status</label>
            @Html.Raw(Html.EnumDropDownList<StatusPedido>(Model.Status, "Status", Model.Status, new { @class = "form-control" }))
        </div>        

        <div class="form-group col-md-8">
            <label>Representante</label>
            @Html.Raw(Html.EntidadeDropDownList<Entidade>(Model.idCliente, "idEntidade", "RazaoSocial", "idCliente", e => (e.TipoEntidadeDb == "Representante"), new { @class = "form-control" }))
        </div>
        
        <div class="col-md-10">
            @Html.ButtonSearch()
            @Html.ButtonCancelar("/Comercial/Pedido/Index")
        </div>

    </div>
</form>
