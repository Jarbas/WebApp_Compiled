@model Rafitec.Cloud.Portal.Dominio.Entidades.PedidoItemEntrega


<div id="crudModal" class="modal fade" role="dialog" data-backdrop="static">
    <div class="modal-dialog">

        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cadastro Entrega</h4>
            </div>

            <div class="modal-body">
                <form action="/Comercial/PedidoItemEntrega/Cadastro" class="formModalResponse" method="post">
                    <div class="row">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => Model.idPedido)
                        @Html.HiddenFor(model => Model.idPedidoItem)
            
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Quantidade<span class="obrigatorio"> *</span></label>
                                @Html.TextBoxFor(model => model.Quantidade, new { @class="form-control" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Quantidade<span class="obrigatorio"> *</span></label>
                                @Html.TextBoxFor(model => model.DataEnterga, new { @class = "form-control", type="date" })
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <button class="btn btn-success" type="submit"><i class="glyphicon glyphicon-ok"></i> Salvar</button>
                        <button class="btn btn-danger" data-dismiss="modal" type="button" ><i class="glyphicon glyphicon-remove"></i> Cancelar</button><!---->
                    </div>.

                </form>
            </div>
        </div>

    </div>
</div>
