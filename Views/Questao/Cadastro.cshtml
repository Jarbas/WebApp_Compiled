@model Rafitec.Cloud.Portal.Web.Models.Questao

@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1 class="panel-title">Cadastro de Questões</h1>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-body">

                <form action="~/Questao/Cadastro" method="post">

                    <div class="form-group">
                        <input name="Id" />
                    </div>

                    <div class="form-group">
                        <input name="Descricao" />
                    </div>

                    @for (var i = 0; i < 3; i++)
                    {
                        <div class="form-group">
                            <input name="Alternativas[@i].Id" />
                        </div>
                        <div class="form-group">
                            <input name="Alternativas[@i].Descricao" />
                        </div>

                        <div class="form-group">
                            <input name="Alternativas[@i].EstaCorreta" value="true" />
                        </div>
                    }
                    <button class="btn btn-xs btn-primary">Salvar</button>

                </form>
            </div>
        </div>
    </div>
</div>
