@model Rafitec.Cloud.Portal.Dominio.Entidades.Usuario

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--<link href="http://www.rafitec.com.br/css/styles.css?v=8" rel="stylesheet">-->

<div class="container" style="margin-top: 40px">
    <div class="row">

        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <!--<div class="panel panel-default">

         <div class="panel-heading"> <strong> Rafitec Portal - Autenticação</strong></div>-->
            <div class="panel-body">
                
                @*@class = "form-signin", *@
                @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { id = "form-login" }))
                {
                    @Html.ValidationSummary();
                <fieldset>
                    <!-- <center>
    <img id="profile-login" class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" alt="">

               </center>-->
                    <div class="row">
                        <div class="col-sm-12 col-md-10  col-md-offset-1">
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-user"> </i>
                                    </span>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Informe seu login" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="glyphicon glyphicon-lock"> </i>
                                    </span>
                                    @Html.PasswordFor(model => model.Senha, new { @class = "form-control", placeholder = "Informe sua seha" })
                                    @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <center>
                                <p style="color: red; margin: auto">@ViewBag.ErroLogin</p>
                            </center>

                            <div class="row">
                                <button class="btn btn-primary" type="submit">Acessar</button>
                            </div>
                        </div>
                    </div>
                </fieldset>
                }

                <!-- </div>
    <div class="panel-footer ">
        <a href="http://www.rafitec.com.br/" target="_blank">Acesse nosso site.</a>
    </div>-->
            </div>
       
        </div>
    </div>
</div>



