@model Rafitec.Cloud.Portal.Dominio.Entidades.Usuario

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 40px">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="panel-body">
    
                @using (Html.BeginForm("LoginCodigo", "Login", FormMethod.Post, new { id = "form-login" }))
                {
                    @Html.ValidationSummary();
                <fieldset>
                    <div class="row">
                        <center>
                            <p style="color: red; margin: auto">@ViewBag.ErroLogin</p>
                        </center>
                        <div class="col-md-12">

                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="glyphicon glyphicon-user"> </i>
                                </span>
                                @Html.TextBoxFor(model => model.idMatriculaSenior, new { @class = "form-control", @style = "max-width: 120px" })
                                @Html.ValidationMessageFor(model => model.idMatriculaSenior, "", new { @class = "text-danger" })

                                <div>
                                    <button class="btn btn-primary" type="submit">ok</button>
                                </div>
                            </div>
                          
                        </div>
                    </div>
</fieldset>
                }
            </div>
        </div>
    </div>
</div>



